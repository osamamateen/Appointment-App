<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script
      src="https://code.jquery.com/jquery-3.5.1.min.js"
      integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
      crossorigin="anonymous"
    ></script>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css"
    />
    <title>Document</title>
  </head>
  <body>
    <br /><br /><br /><br /><br /><br />
    <div class="container" style="width: 50%;">
      <form action="/sessions" method="POST">
        <div class="input-field">
          <input type="text" name="name" placeholder="Name" />
        </div>
        <br />
        <div class="input-field">
          <input type="text" name="contact" placeholder="Contact no." />
        </div>
        <br />
        <input type="text" class="datepicker" placeholder="Date" name="date" />
        <br />
        <div class="input-field col s12">
          <select name="time">
            <option value="" disabled selected>Choose Time</option>
            <option value="8:00">8:00 PM</option>
            <option value="9:00">9:00 PM</option>
            <option value="10:00">10:00 PM</option>
          </select>
        </div>
        <br />
        <br />
        <% if (alert) { %>
        <p style="color: red;">
          * This slot is already booked, please choose another day or time.
        </p>
        <%}%>
        <br />
        <!-- <input type="submit" class="waves-effect waves-light btn" /> -->
        <button
          class="btn waves-effect waves-light"
          type="submit"
          name="action"
        >
          Submit
        </button>
      </form>
      <br /><br />
      <a href="/sessions">Go back</a>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
  </body>

  <script>
    // Select Time

    $(document).ready(function () {
      $("select").formSelect();
    });

    // Date picker
    const calander = document.querySelector(".datepicker");
    M.Datepicker.init(calander, {
      format: "yyyy-mm-dd",
      disableWeekends: true,
    });
  </script>
</html>
